<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/activity_login"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="tez.levent.feyyaz.kedi.activities.LoginActivity"
    android:background="@color/colorPrimary">

    <Button
        android:text="Geri"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/geri"
        tools:ignore="HardcodedText"
        android:background="@color/colorPrimaryDark"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:fontFamily="sans-serif"
        android:textStyle="normal|bold"
        tools:targetApi="jelly_bean"
        android:layout_below="@+id/alan"
        android:layout_alignLeft="@+id/alan"
        android:layout_alignStart="@+id/alan"/>

    <Button
        android:text="Kayıt Ol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/kayit_ol"
        tools:ignore="HardcodedText"
        android:background="@color/colorPrimaryDark"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:fontFamily="sans-serif"
        android:textStyle="normal|bold"
        tools:targetApi="jelly_bean"
        android:layout_below="@+id/alan"
        android:layout_alignRight="@+id/alan"
        android:layout_alignEnd="@+id/alan"/>

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/alan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/ad"
            android:hint="İsim"
            tools:ignore="HardcodedText"
            style="@style/Widget.AppCompat.EditText"
            android:fontFamily="sans-serif-condensed"
            android:textStyle="normal|bold"
            tools:targetApi="jelly_bean"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/soyad"
            android:hint="Soyisim"
            tools:ignore="HardcodedText"
            style="@style/Widget.AppCompat.EditText"
            android:fontFamily="sans-serif-condensed"
            android:textStyle="normal|bold"
            tools:targetApi="jelly_bean"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:maxLength="13"
            android:id="@+id/ogrenci_no"
            android:hint="Öğrenci Numarası"
            tools:ignore="HardcodedText"
            style="@style/Widget.AppCompat.EditText"
            android:fontFamily="sans-serif-condensed"
            android:textStyle="normal|bold"
            tools:targetApi="jelly_bean"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/sifre"
            android:hint="Şifre"
            tools:ignore="HardcodedText"
            style="@style/Widget.AppCompat.EditText"
            android:fontFamily="sans-serif-condensed"
            android:textStyle="normal|bold"
            tools:targetApi="jelly_bean"/>

    </LinearLayout>

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_login"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="tez.levent.feyyaz.kedi.activities.LoginActivity"
    android:background="@color/colorPrimary">

    <ImageView
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/logo"
        android:id="@+id/logo"
        android:adjustViewBounds="true"
        android:layout_width="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        tools:ignore="ContentDescription"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:maxLength="13"
        android:layout_below="@+id/logo"
        android:layout_centerHorizontal="true"
        android:id="@+id/ogrenci_no"
        android:hint="Öğrenci Numarası"
        tools:ignore="HardcodedText"
        style="@style/Widget.AppCompat.EditText"
        android:fontFamily="sans-serif-condensed"
        android:textStyle="bold"
        android:textAllCaps="false"
        tools:targetApi="jelly_bean"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_below="@+id/ogrenci_no"
        android:layout_alignLeft="@+id/ogrenci_no"
        android:layout_alignStart="@+id/ogrenci_no"
        android:id="@+id/sif"
        android:hint="Şifre"
        android:layout_alignRight="@+id/ogrenci_no"
        android:layout_alignEnd="@+id/ogrenci_no"
        tools:ignore="HardcodedText"
        style="@style/Widget.AppCompat.EditText"
        android:fontFamily="sans-serif-condensed"
        android:textStyle="bold"
        android:textAllCaps="false"
        tools:targetApi="jelly_bean"/>

    <Button
        android:text="Oturum Aç"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/sif"
        android:layout_alignStart="@+id/sif"
        android:id="@+id/oturum_ac"
        android:layout_below="@+id/sif"
        android:layout_marginTop="8dp"
        android:layout_alignRight="@+id/sif"
        android:layout_alignEnd="@+id/sif"
        tools:ignore="HardcodedText"
        android:background="@color/colorPrimaryDark"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:fontFamily="sans-serif"
        android:textStyle="normal|bold"
        tools:targetApi="jelly_bean"/>

    <Button
        android:text="Kayıt Ol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/kayit_ol"
        tools:ignore="HardcodedText"
        android:background="@color/colorPrimaryDark"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/oturum_ac"
        android:layout_alignLeft="@+id/oturum_ac"
        android:layout_alignStart="@+id/oturum_ac"
        android:layout_alignRight="@+id/oturum_ac"
        android:layout_alignEnd="@+id/oturum_ac"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:fontFamily="sans-serif"
        android:textStyle="normal|bold"
        tools:targetApi="jelly_bean"/>
</RelativeLayout>
